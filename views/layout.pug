doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport" content="width=device-width, initial-scale=1.0")
    title Young4Chicks
    link(rel="stylesheet" href="css/bootstrap-5.3.6-dist/css/bootstrap.css")
    link(rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css")
    link(href='https://cdn.jsdelivr.net/npm/bootstrap@5.3.7/dist/css/bootstrap.min.css', rel='stylesheet', integrity='sha384-LN+7fdVzj6u52u30Kp6M/trliBMCMKTyK833zpbD+pXdCLuTusPj697FH4R/5mcr', crossorigin='anonymous')
  body(style="background-color: rgba(12, 11, 59, 1); margin:0; padding:0;")
 
    // Sidebar Menu
    // Docked Circular Menu
    if !user || user.role !== 'customer'
      #circleMenu(style="position:fixed;top:0;left:0;height:100vh;width:68px;background:rgba(24,49,53,0.98);z-index:1040;display:flex;flex-direction:column;align-items:center;justify-content:flex-start;padding-top:1.1rem;box-shadow:2px 0 8px rgba(0,0,0,0.12);overflow-y:auto;")
        a(href="/dashboard" style="margin-bottom:1.2rem;text-decoration:none;")
          .circle-icon(style="width:38px;height:38px;border-radius:50%;background:rgb(0,255,255,0.12);display:flex;align-items:center;justify-content:center;margin-bottom:0.3rem;border:2px solid rgb(0,255,255);")
            i.fa.fa-home(style="color:rgb(0,255,255);font-size:1.1rem;")
          .circle-label(style="color:rgb(0,255,255);font-size:0.7rem;font-weight:600;text-align:center;") Home
        a(href="/stock" style="margin-bottom:0.7rem;text-decoration:none;")
          .circle-icon(style="width:32px;height:32px;border-radius:50%;background:rgba(255,0,255,0.10);display:flex;align-items:center;justify-content:center;border:2px solid magenta;")
            i.fa.fa-cutlery(style="color:magenta;font-size:0.95rem;")
          .circle-label(style="color:magenta;font-size:0.65rem;text-align:center;") Stock
        a(href="/paymentslist" style="margin-bottom:0.7rem;text-decoration:none;")
          .circle-icon(style="width:32px;height:32px;border-radius:50%;background:rgba(255,165,0,0.10);display:flex;align-items:center;justify-content:center;border:2px solid orange;")
            i.fa.fa-credit-card(style="color:orange;font-size:0.95rem;")
          .circle-label(style="color:orange;font-size:0.65rem;text-align:center;") Paid
        a(href="/requests" style="margin-bottom:0.7rem;text-decoration:none;")
          .circle-icon(style="width:32px;height:32px;border-radius:50%;background:rgba(0,255,255,0.10);display:flex;align-items:center;justify-content:center;border:2px solid cyan;")
            i.fa.fa-list(style="color:cyan;font-size:0.95rem;")
          .circle-label(style="color:cyan;font-size:0.65rem;text-align:center;") Requests
        a(href="/userslist" style="margin-bottom:0.7rem;text-decoration:none;")
          .circle-icon(style="width:32px;height:32px;border-radius:50%;background:rgba(220,20,60,0.10);display:flex;align-items:center;justify-content:center;border:2px solid crimson;")
            i.fa.fa-users(style="color:crimson;font-size:0.95rem;")
          .circle-label(style="color:crimson;font-size:0.65rem;text-align:center;") Users
        a(href="/" style="margin-bottom:0.7rem;text-decoration:none;")
          .circle-icon(style="width:32px;height:32px;border-radius:50%;background:rgba(13,110,253,0.10);display:flex;align-items:center;justify-content:center;border:2px solid #0d6efd;")
            i.fa.fa-sign-out-alt(style="color:#0d6efd;font-size:0.95rem;")
          .circle-label(style="color:#0d6efd;font-size:0.65rem;text-align:center;") Logout
    // Main content block
    .main-content(style="margin-left:68px;padding:2rem 1.5rem 1.5rem 1.5rem;min-height:100vh;transition:margin-left 0.3s;")
      block content